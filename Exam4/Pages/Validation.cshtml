@page
@model Exam4.Pages.ValidationModel
@{
    ViewData["Title"] = "Email Validation";
}

<!DOCTYPE html>
<html>
<head>
    <title>@ViewData["Title"] - Exam4</title>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
</head>
<body style="margin: 0; padding: 20px; font-family: Arial, sans-serif; background: linear-gradient(135deg, #667eea 0%, #764ba2 100%); min-height: 100vh; display: flex; justify-content: center; align-items: center;">

    <div style="max-width: 500px; width: 100%; background: white; border-radius: 15px; box-shadow: 0 10px 30px rgba(0,0,0,0.2); padding: 30px; text-align: center; position: relative;">

        <!-- Success colored top bar -->
        @if (Model.IsSuccess)
        {
            <div style="position: absolute; top: 0; left: 0; right: 0; height: 4px; background: #4CAF50; border-radius: 15px 15px 0 0;"></div>
        }
        else
        {
            <div style="position: absolute; top: 0; left: 0; right: 0; height: 4px; background: #f44336; border-radius: 15px 15px 0 0;"></div>
        }

        @if (Model.IsSuccess)
        {
            <!-- Success Section -->
            <div style="color: #2e7d32;">
                <div style="width: 80px; height: 80px; margin: 0 auto 20px; border-radius: 50%; background: linear-gradient(145deg, #4CAF50, #45a049); display: flex; align-items: center; justify-content: center; font-size: 36px; color: white;">
                    ✓
                </div>

                <h1 style="color: #333; margin-bottom: 15px; font-size: 24px; font-weight: 600;">🎉 Success!</h1>

                <p style="font-size: 16px; line-height: 1.6; color: #666; margin-bottom: 20px;">
                    Your email has been successfully verified!
                </p>

                <div style="background: linear-gradient(145deg, #e8f5e9, #c8e6c9); color: #2e7d32; padding: 15px; border-radius: 10px; margin: 20px 0; font-weight: 500;">
                    Welcome aboard! You're all set to use our platform.
                </div>

                @if (Model.Credentials != null)
                {
                    <div style="background: #f8f9fa; padding: 20px; border-radius: 10px; margin: 25px 0; border-left: 4px solid #4CAF50; text-align: left;">
                        <strong style="color: #333;">📧 Email:</strong> @Model.Credentials.Email<br><br>
                        <strong style="color: #333;">⏰ Verified:</strong> @Model.Credentials.ValidationDate?.ToString("MMM dd, yyyy 'at' HH:mm")<br><br>
                        <strong style="color: #333;">✅ Status:</strong> @Model.Credentials.EmailStatus
                    </div>
                }
            </div>
        }
        else
        {
            <!-- Error Section -->
            <div style="color: #c62828;">
                <div style="width: 80px; height: 80px; margin: 0 auto 20px; border-radius: 50%; background: linear-gradient(145deg, #f44336, #d32f2f); display: flex; align-items: center; justify-content: center; font-size: 36px; color: white;">
                    ✗
                </div>

                <h1 style="color: #333; margin-bottom: 15px; font-size: 24px; font-weight: 600;">Oops!</h1>

                <p style="font-size: 16px; line-height: 1.6; color: #666; margin-bottom: 20px;">
                    We couldn't verify your email address.
                </p>

                <div style="background: linear-gradient(145deg, #ffebee, #ffcdd2); color: #c62828; padding: 15px; border-radius: 10px; margin: 20px 0; font-weight: 500;">
                    @Model.ErrorMessage
                </div>

                <p style="font-size: 16px; line-height: 1.6; color: #666; margin-bottom: 20px;">
                    Don't worry! You can request a new verification email below.
                </p>
            </div>
        }

        <!-- Back Button -->
        <a href="/MailPage" style="display: inline-block; padding: 15px 30px; background: linear-gradient(145deg, #4CAF50, #45a049); color: white; text-decoration: none; border-radius: 25px; font-weight: 500; margin-top: 20px; box-shadow: 0 4px 15px rgba(76, 175, 80, 0.3);">
            ← Get New Verification Email
        </a>

    </div>

</body>
</html>